<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="top|center_vertical">

    <ImageView
        android:id="@+id/ctgr_btn"

        android:layout_width="169dp"
        android:layout_height="90dp"

        android:background="@drawable/testback"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <EditText
        android:id="@+id/txtCtgr2"
        android:layout_width="116dp"
        android:layout_height="56dp"
        android:background="@null"
        android:clickable="false"
        android:gravity="center"
        android:singleLine="true"
        android:text="카테고링 이름"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ctgr_btn"
        app:layout_constraintEnd_toEndOf="@+id/ctgr_btn"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/ctgr_btn"
        app:layout_constraintTop_toTopOf="@+id/ctgr_btn"
        app:layout_constraintVertical_bias="0.41" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="#00ECECEC"
        android:scaleType="fitEnd"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ctgr_btn"
        app:layout_constraintEnd_toEndOf="@+id/ctgr_btn"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="@+id/ctgr_btn"
        app:layout_constraintTop_toTopOf="@+id/ctgr_btn"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/close" />

    <ImageButton
        android:id="@+id/repair"
        android:layout_width="15dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:scaleType="fitEnd"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ctgr_btn"
        app:layout_constraintEnd_toEndOf="@+id/ctgr_btn"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="@+id/ctgr_btn"
        app:layout_constraintTop_toTopOf="@+id/ctgr_btn"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pencil" />

    <TextView
        android:id="@+id/txtCtgr3"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:ellipsize="end"
        android:fontFamily="@font/diligent"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:text="카테고링 이름"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ctgr_btn"
        app:layout_constraintEnd_toEndOf="@+id/ctgr_btn"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/ctgr_btn"
        app:layout_constraintTop_toTopOf="@+id/ctgr_btn"
        app:layout_constraintVertical_bias="0.41" />


</androidx.constraintlayout.widget.ConstraintLayout>